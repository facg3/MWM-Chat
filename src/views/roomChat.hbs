
<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <a href="/logout">logout</a>
</div>
  <p><span onclick="openNav()" class="span">&#9776;</span></p>
<div class="containerChat">
  <h1>MWM Room Chat </h1>
  <h2>Hello : <span id='usernameChat'>{{data.username}}</span></h2>
  <div class="room">
    <ul>
    {{#each posts}}
      <li>{{this.username }} : {{message}}</li>
    {{/each}}
  </ul>
  </div>
  <div class="chats">
    <form id='chatForm'>
      <input type="text" id='message' placeholder="Write Your Message">
      <center><button type="submit" class="send" id="btn" >Send</button></center>
    </form>
  </div>
</div>
<script src="js/roomChat.js" charset="utf-8"></script>
<script src="js/roomChatDom.js" charset="utf-8"></script>
