<div class="container">
<h1>Register Page </h1>
  <form class="" action="/register" method="post" id='registerForm'>
    <input type="email" id ='email' placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
    <input type="text" id ='username' placeholder="Username" required>
    <input type="password" id ='password' placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
    <button type="submit" name="button" id="btn">Register</button>
    <h4>please &rsaquo;&rsaquo;  <a href="/">login here</a></h4>
    <div id="paragraph">
    </div>
  </form>
</div>
<script src="js/register.js" charset="utf-8"></script>
